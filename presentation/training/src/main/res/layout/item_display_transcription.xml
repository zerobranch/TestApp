<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/common_spacing_8"
    android:layout_marginTop="@dimen/common_spacing_8"
    android:background="@drawable/common_bg_transcription"
    android:paddingVertical="@dimen/common_spacing_8"
    tools:background="@color/common_white"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_field_height"
        android:layout_marginHorizontal="@dimen/common_spacing_8"
        android:background="@drawable/common_bg_rounded_corners"
        android:backgroundTint="@color/common_bg_primary_edittext"
        android:ellipsize="marquee"
        android:gravity="center_vertical"
        android:hint="@string/common_title"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingStart="@dimen/common_spacing_12"
        android:paddingEnd="@dimen/common_spacing_8"
        android:textAppearance="?DefaultSemiBold"
        app:drawableTint="@color/common_text_on_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textSize="15sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/et_first_hint"
        style="@style/CommonTextBoxStyle"
        android:layout_width="100dp"
        android:layout_marginStart="@dimen/common_spacing_8"
        android:layout_marginTop="@dimen/common_spacing_8"
        android:ellipsize="marquee"
        android:hint="@string/common_brith_flag"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        tools:textSize="15sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/et_first_transcription"
        style="@style/CommonTextBoxStyle"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/common_spacing_8"
        android:layout_marginTop="@dimen/common_spacing_8"
        android:layout_marginEnd="@dimen/common_spacing_8"
        android:ellipsize="marquee"
        android:hint="@string/common_transcription"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintEnd_toStartOf="@id/iv_first_transcription_audio"
        app:layout_constraintStart_toEndOf="@id/et_first_hint"
        app:layout_constraintTop_toBottomOf="@id/et_title"
        tools:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iv_first_transcription_audio"
        style="@style/CommonRoundRectButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_spacing_8"
        android:padding="@dimen/common_spacing_8"
        android:src="@drawable/common_ic_volume"
        android:tint="@color/common_tertiary_btn_text_color"
        app:layout_constraintBottom_toBottomOf="@id/et_first_transcription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_first_transcription"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/et_second_hint"
        style="@style/CommonTextBoxStyle"
        android:layout_width="100dp"
        android:layout_marginStart="@dimen/common_spacing_8"
        android:layout_marginTop="@dimen/common_spacing_8"
        android:ellipsize="marquee"
        android:hint="@string/common_usa_flag"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_first_hint"
        tools:textSize="15sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/et_second_transcription"
        style="@style/CommonTextBoxStyle"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/common_spacing_8"
        android:layout_marginTop="@dimen/common_spacing_8"
        android:layout_marginEnd="@dimen/common_spacing_8"
        android:ellipsize="marquee"
        android:hint="@string/common_transcription"
        android:lines="1"
        android:marqueeRepeatLimit="marquee_forever"
        app:layout_constraintEnd_toStartOf="@id/iv_second_transcription_audio"
        app:layout_constraintStart_toEndOf="@id/et_first_hint"
        app:layout_constraintTop_toBottomOf="@id/et_first_hint"
        tools:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/iv_second_transcription_audio"
        style="@style/CommonRoundRectButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_spacing_8"
        android:padding="@dimen/common_spacing_8"
        android:src="@drawable/common_ic_volume"
        android:tint="@color/common_tertiary_btn_text_color"
        app:layout_constraintBottom_toBottomOf="@id/et_second_transcription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/et_second_transcription"
        />

</androidx.constraintlayout.widget.ConstraintLayout>