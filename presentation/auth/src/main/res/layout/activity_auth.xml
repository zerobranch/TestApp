<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg_primary"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_launch_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/common_bg_round_rect_bordered_ripple"
        android:paddingHorizontal="@dimen/common_spacing_12"
        android:paddingBottom="@dimen/common_spacing_6"
        android:text="@string/common_launch_app"
        android:textAppearance="?H1"
        android:textColor="@color/common_text_primary"
        app:layout_constraintBottom_toTopOf="@id/tv_fingerprint_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:textSize="17sp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_fingerprint_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/common_bg_round_rect_bordered_ripple"
        android:paddingHorizontal="@dimen/common_spacing_12"
        android:paddingBottom="@dimen/common_spacing_6"
        android:text="@string/common_fingerprint_test"
        android:textAppearance="?H1"
        android:textColor="@color/common_text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:textSize="17sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>