<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/common_white"
    >

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/common_ic_backward"
        app:subtitle="@string/common_backup"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_upload_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_spacing_16"
        android:gravity="center_vertical"
        android:text="@string/common_upload_the_database"
        android:textAppearance="?H2"
        android:textColor="@color/common_text_primary"
        tools:textSize="15sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_import"
        style="@style/CommonBaseButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_spacing_12"
        android:paddingHorizontal="50dp"
        android:paddingVertical="@dimen/common_spacing_8"
        android:text="@string/common_import"
        tools:textColor="#A2C4FF"
        tools:textSize="17sp"
        />

    <LinearLayout
        android:id="@+id/ll_import_db_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing_4"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_import_db_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?DefaultMedium"
            android:textColor="@color/common_text_primary"
            tools:text="v1\nWords: 3\nCategories: 0\nTypes: 0"
            tools:textSize="13sp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply"
            style="@style/CommonBaseButton.Tertiary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/common_spacing_12"
            android:layout_marginTop="@dimen/common_spacing_4"
            android:paddingHorizontal="@dimen/common_spacing_16"
            android:paddingVertical="@dimen/common_spacing_8"
            android:text="@string/common_apply"
            android:textColor="@color/common_primary"
            tools:textSize="17sp"
            />

    </LinearLayout>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_save_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_spacing_30"
        android:gravity="center_vertical"
        android:text="@string/common_title_save_the_database"
        android:textAppearance="?H2"
        android:textColor="@color/common_text_primary"
        tools:textSize="15sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_export"
        style="@style/CommonBaseButton.Primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/common_spacing_12"
        android:paddingHorizontal="50dp"
        android:paddingVertical="@dimen/common_spacing_8"
        android:text="@string/common_export"
        tools:textColor="#A2C4FF"
        tools:textSize="17sp"
        />

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_to_telegram"
        style="@style/CommonCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:checked="true"
        android:gravity="center_vertical"
        android:text="@string/common_to_telegram"
        tools:textSize="13sp"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>