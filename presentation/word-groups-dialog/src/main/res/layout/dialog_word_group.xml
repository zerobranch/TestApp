<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/common_bg_primary"
    >

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_delete"
        style="@style/CommonRoundRectButtonStyle"
        android:layout_marginStart="@dimen/common_spacing_12"
        android:layout_marginTop="@dimen/common_spacing_16"
        android:padding="@dimen/common_spacing_8"
        android:src="@drawable/common_ic_delete"
        android:tint="@color/common_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_close"
        style="@style/CommonRoundRectButtonStyle"
        android:layout_marginEnd="@dimen/common_spacing_12"
        android:padding="@dimen/common_spacing_8"
        android:src="@drawable/common_ic_close_large"
        android:tint="@color/common_text_primary"
        app:layout_constraintBottom_toBottomOf="@id/ib_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ib_delete"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_prev"
        style="@style/CommonBaseButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_spacing_4"
        android:paddingVertical="@dimen/common_spacing_8"
        android:text="@string/common_previous"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ib_delete"
        tools:textColor="#A2C4FF"
        tools:textSize="17sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        style="@style/CommonBaseButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/common_spacing_8"
        android:text="@string/common_next"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_prev"
        app:layout_constraintEnd_toEndOf="parent"
        tools:textColor="#A2C4FF"
        tools:textSize="17sp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_save"
        style="@style/CommonBaseButton.Tertiary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/common_spacing_8"
        android:text="@string/common_save"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_prev"
        app:layout_constraintEnd_toStartOf="@id/btn_next"
        app:layout_constraintStart_toEndOf="@id/btn_prev"
        tools:textColor="#A2C4FF"
        tools:textSize="17sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_items"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="@dimen/common_spacing_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_prev"
        tools:itemCount="1"
        tools:listitem="@layout/common_item_adding_word"
        />

</androidx.constraintlayout.widget.ConstraintLayout>