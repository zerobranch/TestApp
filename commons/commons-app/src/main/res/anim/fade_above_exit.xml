<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="300"
        android:fromAlpha="1"
        android:toAlpha="0"
        />

    <scale
        android:duration="300"
        android:fromXScale="100%"
        android:fromYScale="100%"
        android:toXScale="90%"
        android:toYScale="90%"
        />

    <translate
        android:duration="300"
        android:fromXDelta="0%"
        android:fromYDelta="0%"
        android:toXDelta="5%"
        android:toYDelta="5%"
        />

</set>