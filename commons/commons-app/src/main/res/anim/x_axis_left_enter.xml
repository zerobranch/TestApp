<?xml version="1.0" encoding="utf-8"?>
<set
    xmlns:android="http://schemas.android.com/apk/res/android">

    <alpha
        android:duration="210"
        android:fromAlpha="0"
        android:interpolator="@android:anim/linear_interpolator"
        android:startOffset="90"
        android:toAlpha="1"
        />

    <translate
        android:duration="210"
        android:fromXDelta="5%"
        android:interpolator="@android:anim/linear_interpolator"
        android:startOffset="90"
        android:toXDelta="0%"
        />

</set>