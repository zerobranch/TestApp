<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CommonSwitchButton" parent="Base.Widget.Material3.CompoundButton.Switch">
        <item name="android:textAppearance">?DefaultMedium</item>
        <item name="android:textColor">@color/common_text_primary</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">@dimen/common_spacing_10</item>
        <item name="android:paddingBottom">@dimen/common_spacing_10</item>
        <item name="track">@drawable/common_track_switch</item>
        <item name="android:thumb">@drawable/common_thumb_switch</item>
        <item name="trackTint">@color/color_track_switch</item>
        <item name="thumbTint">@color/color_thumb_switch</item>
<!--        <item name="thumbEnabledShadowColor">@color/common_enabled_switch_shadow</item>-->
<!--        <item name="thumbDisabledShadowColor">@color/common_disabled_switch_shadow</item>-->
    </style>

    <style name="CommonCheckBox" parent="Base.Widget.Material3.CompoundButton.CheckBox">
        <item name="android:paddingStart">@dimen/common_spacing_8</item>
        <item name="android:paddingTop">@dimen/common_spacing_8</item>
        <item name="android:paddingBottom">@dimen/common_spacing_8</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:button">@drawable/common_checkbox_button</item>
        <item name="buttonTintMode">screen</item>
        <item name="buttonTint">@color/common_transparent</item>
        <item name="android:textAppearance">?DefaultMedium</item>
        <item name="android:textColor">@color/common_text_primary</item>
    </style>

    <style name="CommonChip" parent="Base.Widget.Material3.Chip">
        <item name="android:textAppearance">?DefaultMedium</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>
        <item name="closeIcon">@null</item>
        <item name="chipIconSize">0dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
        <item name="chipStrokeWidth">0dp</item>
        <item name="chipCornerRadius">50dp</item>
        <item name="android:backgroundTint">@color/color_bg_button</item>
        <item name="rippleColor">@color/common_transparent</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:checkable">true</item>
        <item name="android:paddingStart">@dimen/common_spacing_15</item>
        <item name="android:paddingEnd">@dimen/common_spacing_15</item>
        <item name="android:paddingTop">@dimen/common_spacing_10</item>
        <item name="android:paddingBottom">@dimen/common_spacing_10</item>
    </style>

    <style name="CommonBaseButton" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:layout_height">@dimen/common_field_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="elevation">0dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">20dp</item>
        <item name="lineHeight">21dp</item>
    </style>

    <style name="CommonBaseButton.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAppearance">?DefaultBold</item>
        <item name="android:textColor">@color/common_text_on_primary_button</item>
        <item name="rippleColor">@color/common_ripple_on_primary</item>
        <item name="backgroundTint">@color/common_bg_primary_button</item>
    </style>

    <style name="CommonBaseButton.Secondary">
        <item name="backgroundTint">@color/common_active_color</item>
        <item name="android:paddingStart">@dimen/common_spacing_16</item>
        <item name="android:paddingEnd">@dimen/common_spacing_16</item>
        <item name="android:textAppearance">?DefaultBold</item>
        <item name="android:textColor">@color/common_text_primary</item>
        <item name="rippleColor">@color/common_ripple_primary</item>
    </style>

    <style name="CommonBaseButton.Tertiary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">?DefaultBold</item>
        <item name="android:textColor">@color/common_tertiary_btn_text_color</item>
        <item name="rippleColor">@color/common_ripple_primary</item>
        <item name="backgroundTint">@color/common_transparent</item>
    </style>

    <style name="CommonOnlyIconButton">
        <item name="android:layout_width">@dimen/common_image_button_height</item>
        <item name="android:layout_height">@dimen/common_image_button_height</item>
        <item name="android:background">@drawable/common_bg_round_ripple</item>
        <item name="android:padding">@dimen/common_spacing_10</item>
        <item name="backgroundTint">@color/common_active_color</item>
        <item name="tint">@color/common_text_primary</item>
    </style>

    <style name="CommonRoundButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/common_bg_round_bordered_ripple</item>
        <item name="android:padding">@dimen/common_spacing_16</item>
    </style>

    <style name="CommonRoundRectButtonStyle">
        <item name="android:layout_width">@dimen/common_field_height</item>
        <item name="android:layout_height">@dimen/common_field_height</item>
        <item name="android:background">@drawable/common_bg_round_rect_bordered_ripple</item>
        <item name="android:padding">@dimen/common_spacing_16</item>
    </style>

    <style name="CommonTextBoxStyle">
        <item name="android:textAppearance">?DefaultSemiBold</item>
        <item name="android:paddingEnd">@dimen/common_spacing_8</item>
        <item name="android:paddingStart">@dimen/common_spacing_12</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableTint">@color/common_text_on_primary</item>
        <item name="android:backgroundTint">@color/common_bg_primary_edittext</item>
        <item name="android:background">@drawable/common_bg_rounded_corners</item>
        <item name="android:layout_height">@dimen/common_field_height</item>
    </style>

    <style name="CommonRoundButtonStyle.Small">
        <item name="android:layout_width">@dimen/common_image_button_height</item>
        <item name="android:layout_height">@dimen/common_image_button_height</item>
        <item name="android:background">@drawable/common_bg_round_bordered_ripple</item>
        <item name="android:padding">@dimen/common_spacing_12</item>
    </style>

    <style name="CommonShareBtnStyle">
        <item name="android:layout_width">@dimen/common_field_height</item>
        <item name="android:layout_height">@dimen/common_field_height</item>
        <item name="android:background">@drawable/common_bg_round_ripple</item>
        <item name="android:padding">@dimen/common_spacing_10</item>
        <item name="android:src">@drawable/common_ic_share</item>
        <item name="android:tint">@color/common_text_primary</item>
    </style>

</resources>