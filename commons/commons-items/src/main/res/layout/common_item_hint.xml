<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/common_spacing_8"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    >

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_hint"
        style="@style/CommonBaseEditText.Primary"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/common_spacing_16"
        android:layout_weight="1"
        android:drawableTint="@color/common_text_on_primary"
        android:hint="@string/common_hint_title"
        android:imeOptions="actionNext"
        android:importantForAutofill="no"
        android:inputType="text"
        android:lines="1"
        tools:textSize="15sp"
        />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_delete"
        style="@style/CommonRoundRectButtonStyle"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/common_spacing_16"
        android:layout_marginStart="@dimen/common_spacing_8"
        android:padding="@dimen/common_spacing_8"
        android:src="@drawable/common_ic_delete"
        android:tint="@color/common_text_primary"
        />

</LinearLayout>